<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Clinical.Views.RequestPage"
             BackgroundImageSource="doc.jpg">

    <StackLayout BackgroundColor="#90000000">
        <Frame CornerRadius="50" 
                   HeightRequest="30"
                   WidthRequest="30"
                   IsClippedToBounds="True"  
                   HorizontalOptions="Start"
                   Margin="20,30,0,0">

            <Image Source="{Binding LoggedInUser.Image}"
                       Scale="2.5"
                        />

        </Frame>
        <Label Text="{Binding LoggedInUser.FullName}"
               Margin="100,-80,0,0"
               FontSize="26"
               TextColor="Red"/>
        <Label Text="{Binding LoggedInUser.EmailAddress}"
               Margin="100,-10,0,0"
               TextColor="White"
               FontSize="18"/>

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Text="Patient Name"
                   Grid.Row="0"
                   Grid.Column="0"
                   FontSize="Large"
                   Margin="0,10,0,-20"
                   TextColor="White"/>
            <Entry Text="{Binding CurrentAppt.Name}" 
                   PlaceholderColor="Darkgray"
                   Placeholder="Name"
                   Grid.Row="1"
                   Grid.Column="0"
                   TextColor="White"/>
            
            <Label Text="Time of Appt"
                   Grid.Row="0"
                   Grid.Column="1"
                   FontSize="Large"
                   Margin="0,10,0,-20"
                   TextColor="White"/>
            <Entry Text="{Binding CurrentAppt.Time}" 
                   Placeholder="*Requered!*" 
                   PlaceholderColor="DarkRed"
                   Grid.Row="1"
                   Grid.Column="1"
                   TextColor="White"/>
    

            <Label Text="Department"
                   Grid.Row="2"
                   Grid.Column="0"
                   FontSize="Large"
                   Margin="0,10,0,-20"
                   TextColor="White"/>
            <Entry Text="{Binding CurrentAppt.Department}" 
                   Placeholder="department" 
                   PlaceholderColor="Darkgray"
                   Grid.Row="3"
                   Grid.Column="0"
                   TextColor="White"/>
            


            <Label Text="Date"
                   Grid.Row="2"
                   Grid.Column="1"
                   FontSize="Large"
                   Margin="0,10,0,-20"
                   TextColor="White"/>
            <Entry 
                   Placeholder="Date"
                   PlaceholderColor="Darkgray"
                   Grid.Row="3"
                   Grid.Column="1"
                   TextColor="White"
                    Text="{Binding CurrentAppt.Date}"/>



        </Grid>
        <Editor Placeholder="Reason For Appointment"
                    BackgroundColor="#90ffffff"
                    Margin="10"
                    HeightRequest="180"
                    Text="{Binding CurrentAppt.Reason}"/>
        <Button Text="REQUEST"
                HorizontalOptions="CenterAndExpand"
                WidthRequest="400"
                CornerRadius="10"
                BackgroundColor="Red"
                TextColor="White"
                Command="{Binding RequestCommand}"/>

    </StackLayout>
  
</ContentPage>